<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Archetype Created Web Application</display-name>

    <filter>
    <filter-name>LoggerFilter</filter-name>
    <filter-class>ru.tsystems.shalamov.web.LoggerFilter</filter-class>
    </filter>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>ru.tsystems.shalamov.web.LoginFilter</filter-class>
    </filter>

    <filter-mapping>
    <filter-name>LoggerFilter</filter-name>
    <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/secure/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DriverManagementServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.DriverManagementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderManagementServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.OrderManagementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TruckManagementServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.TruckManagementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>AssignmentServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.AssignmentServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DriverInfoServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.DriverInfoServlet</servlet-class>
    </servlet>

    <!--LOGIN LOGOUT-->
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <!--DRIVERS-->
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/showDrivers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/addDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/deleteDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/editDriver</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/updateDriver</url-pattern>
    </servlet-mapping>

    <!--ORDERS-->
    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/showOrders</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/addOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/deleteOrder</url-pattern>
    </servlet-mapping>

    <!--TRUCKS-->
    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/showTrucks</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/addTruck</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/deleteTruck</url-pattern>
    </servlet-mapping>


    <!--ASSIGNMENT-->
    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/showAssignments</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/assign</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/constructAssignment</url-pattern>
    </servlet-mapping>


    <!--DRIVER INFO-->
    <servlet-mapping>
        <servlet-name>DriverInfoServlet</servlet-name>
        <url-pattern>/driverInfo</url-pattern>
    </servlet-mapping>

</web-app>
