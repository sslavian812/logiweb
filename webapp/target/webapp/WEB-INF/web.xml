    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>DriverManagementServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.DriverManagementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>OrderManagementServlet</servlet-name>
        <servlet-class>ru.tsystems.shalamov.web.OrderManagementServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>TruckManagementServlet</servlet-name>
