    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--DRIVERS-->
    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/showDrivers</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/addDriver</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>DriverManagementServlet</servlet-name>
        <url-pattern>/secure/deleteDriver</url-pattern>
    </servlet-mapping>

    <!--ORDERS-->
    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/showOrders</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/addOrder</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>OrderManagementServlet</servlet-name>
        <url-pattern>/secure/deleteOrder</url-pattern>
    </servlet-mapping>

    <!--TRUCKS-->
    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/showTrucks</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/addTruck</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>TruckManagementServlet</servlet-name>
        <url-pattern>/secure/deleteTruck</url-pattern>
    </servlet-mapping>


    <!--ASSIGNMENT-->
    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/showAssignments</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/assign</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>AssignmentServlet</servlet-name>
        <url-pattern>/secure/constructAssignment</url-pattern>
    </servlet-mapping>



