<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="logiwebData">
        <class>ru.tsystems.shalamov.entities.CargosEntity</class>
        <class>ru.tsystems.shalamov.entities.DriverSatusesEntity</class>
        <class>ru.tsystems.shalamov.entities.DriversEntity</class>
        <class>ru.tsystems.shalamov.entities.OrdersEntity</class>
        <class>ru.tsystems.shalamov.entities.TruckStatusesEntity</class>
        <class>ru.tsystems.shalamov.entities.TrucksEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username"/>
            <property name="hibernate.connection.password"/>
        </properties>
    </persistence-unit>
</persistence>