<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
    <persistence-unit name="logiweb">
        <!--<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>  TODO: DO I need it??-->
        <class>ru.tsystems.shalamov.entities.CargoEntity</class>
        <class>ru.tsystems.shalamov.entities.DriverEntity</class>
        <class>ru.tsystems.shalamov.entities.OrderEntity</class>
        <class>ru.tsystems.shalamov.entities.TruckEntity</class>
        <class>ru.tsystems.shalamov.entities.ShiftEntity</class>
        <class>ru.tsystems.shalamov.entities.DriverStatusEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/logiweb"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name = "hibernate.show_sql" value = "false" />
        </properties>


    </persistence-unit>
</persistence>